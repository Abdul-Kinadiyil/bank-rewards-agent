<ProxyEndpoint name="default">
  <Description/>
  <FaultRules/>
  <PreFlow name="PreFlow">
    <Request>
      <Step>
        <Name>CORS</Name>
      </Step>
      <!-- 
      <Step>
      <Name>VA-VerifyKey</Name>
    </Step>
      -->
    <!--  
    <Step>
    <Name>OAuthV2-VerifyAccessToken</Name>
  </Step>
    -->
  <Step>
    <Name>JWT-VerifyKeyCloakToken</Name>
  </Step>
  <Step>
    <Name>EV-ExtractRole</Name>
  </Step>
</Request>
<Response/>
</PreFlow>
<PostFlow name="PostFlow">
  <Request/>
  <Response/>
</PostFlow>
<Flows>
  <Flow name="listRewards">
    <Description>Returns a list of rewards.</Description>
    <Request>
      <Step>
        <Name>RF-UnAuthorizedAccess</Name>
        <Condition>keycloak.realmRole !~~ ".*rewards.*" and keycloak.realmRole !~~ ".*admin.*"</Condition>
      </Step>
      <Step>
        <Name>AM-ListRewards</Name>
      </Step>
    </Request>
    <Response/>
    <Condition>(proxy.pathsuffix MatchesPath "/rewards") and (request.verb = "GET")</Condition>
  </Flow>
  <Flow name="listMembers">
    <Description/>
    <Request>
      <Step>
        <Name>RF-UnAuthorizedAccess</Name>
        <Condition>keycloak.realmRole !~~ ".*admin.*"</Condition>
      </Step>
      <Step>
        <Name>AM-ListMembers</Name>
      </Step>
    </Request>
    <Response/>
    <Condition>(proxy.pathsuffix MatchesPath "/members") and (request.verb = "GET")</Condition>
  </Flow>
</Flows>
<HTTPProxyConnection>
  <BasePath>/v1/crm</BasePath>
  <Properties/>
</HTTPProxyConnection>
<RouteRule name="noRoute">
  <Condition>request.verb = "PUT" or request.verb = "DELETE"</Condition>
</RouteRule>
<RouteRule name="default">
  <TargetEndpoint>default</TargetEndpoint>
</RouteRule>
</ProxyEndpoint>
